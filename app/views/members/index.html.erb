<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<table>
  <thead>
    <tr>
      <th>Name main</th>
      <th>Name sub</th>
      <th>Image url</th>
      <th>Birthday</th>
      <th>Birthplace</th>
      <th>Blood type</th>
      <th>Constellation</th>
      <th>Height</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name_main %></td>
        <td><%= member.name_sub %></td>
        <td><%= member.image_url %></td>
        <td><%= member.birthday %></td>
        <td><%= member.birthplace %></td>
        <td><%= member.blood_type %></td>
        <td><%= member.constellation %></td>
        <td><%= member.height %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

